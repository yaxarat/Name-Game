<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="?attr/colorBackground"
                                                   tools:context=".view.GameFragment"
                                                   android:id="@+id/frameLayout">

    <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text=""
            android:textSize="30sp"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/roboto_mono_medium" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageViewHeadshot2" app:layout_constraintHorizontal_bias="0.5"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageViewHeadshot2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewName"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/imageViewHeadshot4" android:layout_marginBottom="16dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageViewHeadshot4"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/imageViewHeadshot6"
            app:layout_constraintTop_toBottomOf="@+id/imageViewHeadshot2" android:layout_marginBottom="16dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageViewHeadshot6"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/textViewScore"
            app:layout_constraintTop_toBottomOf="@+id/imageViewHeadshot4" app:layout_constraintHorizontal_bias="0.5"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageViewHeadshot5" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.441"
            app:layout_constraintTop_toTopOf="@+id/imageViewHeadshot6"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewHeadshot6" android:layout_marginEnd="16dp"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageViewHeadshot3"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageViewHeadshot4"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewHeadshot4"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageViewHeadshot1"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageViewHeadshot2"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewHeadshot2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewScore" android:textSize="36sp"
            android:textColor="?attr/colorAccent" android:fontFamily="@font/roboto_mono_medium"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/game_score" app:layout_constraintTop_toBottomOf="@+id/imageViewHeadshot6"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>