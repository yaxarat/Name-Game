<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="?attr/colorBackground"
                                                   tools:context=".view.GameFragment"
                                                   android:id="@+id/frameLayout">

    <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text=""
            android:textSize="30sp"
            android:textColor="?attr/colorPrimary"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/roboto_mono_medium"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/textViewScore"
            app:layout_constraintStart_toEndOf="@+id/imageViewHeadshot5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imageViewHeadshot2"
            android:layout_marginStart="25dp" app:layout_constraintStart_toEndOf="@+id/imageViewHeadshot1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/imageViewHeadshot4"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imageViewHeadshot4"
            android:layout_marginStart="25dp" app:layout_constraintStart_toEndOf="@+id/imageViewHeadshot3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewHeadshot2"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imageViewHeadshot6"
            app:layout_constraintTop_toTopOf="@+id/imageViewHeadshot4"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewHeadshot4" android:layout_marginStart="25dp"
            app:layout_constraintStart_toEndOf="@+id/imageViewHeadshot4"/>

    <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imageViewHeadshot5"
            app:layout_constraintTop_toTopOf="@+id/imageViewHeadshot2"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewHeadshot2" android:layout_marginStart="25dp"
            app:layout_constraintStart_toEndOf="@+id/imageViewHeadshot2"/>

    <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imageViewHeadshot3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="@+id/imageViewHeadshot4"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewHeadshot4"/>

    <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imageViewHeadshot1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="@+id/imageViewHeadshot2"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewHeadshot2"/>
    <TextView
            tools:text="@string/game_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewScore" android:textSize="36sp"
            android:textColor="?attr/colorAccent" android:fontFamily="@font/roboto_mono_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewHeadshot6" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>