<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation_graph"
            app:startDestination="@id/menuFragment">

    <fragment
            android:id="@+id/menuFragment"
            android:name="com.example.namegame.MenuFragment"
            android:label="fragment_menu"
            tools:layout="@layout/fragment_menu">
        <action android:id="@+id/action_menuFragment_to_gameFragment" app:destination="@id/gameFragment"/>
        <action android:id="@+id/action_menuFragment_to_settingFragment" app:destination="@id/settingFragment"/>
    </fragment>
    <fragment android:id="@+id/gameFragment" android:name="com.example.namegame.GameFragment"
              android:label="fragment_game" tools:layout="@layout/fragment_game"/>
    <fragment android:id="@+id/settingFragment" android:name="com.example.namegame.SettingFragment"
              android:label="fragment_setting" tools:layout="@layout/fragment_setting"/>
</navigation>